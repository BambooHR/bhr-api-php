{
    "name": "bamboohr/php-sdk",
    "description": "Modern PHP SDK for BambooHR API",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.5",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "sebastian/phpcpd": "^2.0",
        "phpmd/phpmd": "^2.13",
        "bamboohr/phpcs": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BambooHR\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BambooHR\\SDK\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "lint" : [
            "find -L BambooHR tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l"
        ],
        "test": [
            "@lint",
            "vendor/bin/phpunit --strict-coverage"
        ],
        "quality": [
            "vendor/bin/phpcs --standard=phpcs.xml src tests",
            "php run-phpmd.php src text phpmd.xml --exclude vendor"
        ],
        "fix-style": [
            "vendor/bin/phpcbf --standard=phpcs.xml src tests"
        ]
    }
}
