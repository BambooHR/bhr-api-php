{
    "name": "bamboohr/api",
    "require": {
        "php": "^5.5 || ^7",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "BambooHR\\API\\": "BambooHR",
            "BambooHR\\API\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8|^5.4",
        "sebastian/phpcpd": "^2.0",
        "squizlabs/php_codesniffer": "^2.6",
        "phpmd/phpmd": "^2.4"
    },
    "scripts": {
        "lint" : [
            "find -L BambooHR tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l"
        ],
        "test": [
            "@lint",
            "vendor/bin/phpunit --strict-coverage"
        ],
        "quality": [
            "vendor/bin/phpcpd BambooHR",
            "vendor/bin/phpcs --standard=phpcs.xml BambooHR",
            "vendor/bin/phpmd BambooHR text phpmd.xml"
        ]
    }
}
